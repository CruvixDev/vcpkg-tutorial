{
   "version": 3,
   "configurePresets": [
      {
         "name": "vcpkg-toolchain",
         "displayName": "vcpkg-toolchain",
         "description": "Use vcpkg toolchain file for dependency management",
         "generator": "Ninja",
         "binaryDir": "${sourceDir}/build",
         "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Debug",
            "CMAKE_TOOLCHAIN_FILE": "./submodules/vcpkg/scripts/buildsystems/vcpkg.cmake"
         }
      }
   ]
}